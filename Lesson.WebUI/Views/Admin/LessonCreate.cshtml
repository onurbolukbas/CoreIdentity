@model LessonModel
@{
    ViewData["Title"] = "LessonCreate";
}

<h2>LessonCreate</h2>

<div class="bg-primary text-white p-1 m-1">
    <h2>Create Lesson </h2>
</div>

<form class="m-1 p-1" asp-action="LessonCreate" method="post">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="dersIsmi">Ders Ismi</label>
        <input asp-for="dersIsmi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="haftalikSaat"></label>
        <input asp-for="haftalikSaat" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="dersKodu"></label>
        <input asp-for="dersKodu" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="dersOgretmeni"></label>
        <input asp-for="dersOgretmeni" class="form-control" />
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</form>
